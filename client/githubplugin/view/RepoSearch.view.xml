<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:layout="sap.ui.layout"
	controllerName="githubplugin.controller.RepoSearch" xmlns:html="http://www.w3.org/1999/xhtml">
	<layout:VerticalLayout width="100%">
		<layout:content>
			<Title text="GitHub Repo Browser" titleStyle="H3"/>
			<Toolbar class="sapUiMediumMarginTop" id="toolbar1">
				<Input value="{/search}" submit="onSearch"></Input>
				<Button text="Search" press="onSearch"></Button>
				<Button text="" icon="sap-icon://sys-cancel" press="onCancel"></Button>
			</Toolbar>
			<ScrollContainer height="500px" width="100%" horizontal="true" vertical="true" focusable="true">
				<List headerText="Repositories ({/total_count})" items="{ path: '/items'}" itemPress="onSelectionChange" mode="None">
					<items>
						<StandardListItem title="{full_name}" type="Active" description="{description}"/>
					</items>
				</List>
			</ScrollContainer>
		</layout:content>
	</layout:VerticalLayout>
</mvc:View>